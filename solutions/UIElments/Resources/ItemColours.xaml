    <VisualBrush 
        x:Key="WhiteFillBrush" 
        Stretch="None"
        TileMode="FlipXY" 
        Viewport="0, 0, 500, 350" 
        ViewportUnits="Absolute"
        >
        <VisualBrush.Visual>
            <Grid Width="500" Height="350">
                <Rectangle Fill="{StaticResource White}" />
                <Rectangle>
                    <Rectangle.Fill>
                        <ImageBrush 
                            ImageSource="pack://application:,,,/TfsWorkbench.UIElements;component/Resources/PostItNoteOverlay.png" 
                            Stretch="None"                             
                            />
