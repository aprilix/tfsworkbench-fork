    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:notePadUi="clr-namespace:TfsWorkbench.NotePadUI"
