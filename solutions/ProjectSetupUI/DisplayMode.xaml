<UserControl
    x:Class="TfsWorkbench.ProjectSetupUI.DisplayMode"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:NodeVisualisation="clr-namespace:TfsWorkbench.ProjectSetupUI.NodeVisualisation"
    >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/TfsWorkbench.UIElements;Component/Resources/ApplicationStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Border Style="{StaticResource MainBorderStyle}">
        <NodeVisualisation:NodeVisualiser DockPanel.Dock="Top" x:Name="ProjectVisualiser" />
    </Border>
</UserControl>
